@model PtnWaiver.Models.WaiverQuestion

@{
    ViewData["Title"] = "Create";
}

<h1>Waiver Questions</h1>
<h4 class="mt-5">Create</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger fw-bold" })

            @* Hidden audit fields (styled like the source view) *@
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="CreatedUserFullName" />
            <input type="hidden" asp-for="CreatedUserEmail" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="form-group my-3">
                <label asp-for="Question" class="control-label fw-bold mb-1"></label>
                @Html.TextAreaFor(model => model.Question, new { @class = "form-control", @rows = 3 })                
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="GroupApprover" class="control-label fw-bold mb-1"></label>
                @* Multi-select using Select2 *@
                @Html.ListBoxFor(
                         model => model.GroupApprover,
                         new MultiSelectList((IEnumerable<SelectListItem>)ViewBag.GroupApprovers, "Value", "Text", Model?.GroupApprover),
                         new
                         {
                             @class = "form-control select2-multiple",
                             multiple = "multiple",
                             style = "width:100%"
                         }
                         )
                <span asp-validation-for="GroupApprover" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="Order" class="control-label fw-bold mb-1"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>

            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="mx-2 btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* Select2 init for this page *@
    <script>
        $(function () {
            $('.select2-multiple').select2({
                placeholder: "-- select --",
                allowClear: true,
                width: '100%',
                // keep dropdown within the form to avoid clipping inside tables/modals
                dropdownParent: $('.select2-multiple').first().closest('form')
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
