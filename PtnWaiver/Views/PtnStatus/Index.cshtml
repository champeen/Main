@model IEnumerable<PtnWaiver.Models.PtnStatus>

@{
    ViewData["Title"] = "Index";
}

<h1>PTN Status</h1>

<div class="row mt-5 mb-3">
    <div class="col-12">
        <a asp-action="Create" class="me-2 btn btn-success">Create New</a>
        <span class=""><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a></span>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Default)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Default)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary me-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No data found</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>
