    <script>
        function DisplayProgressMessage(ctl, msg) {
            $("body").addClass("submit-progress-bg");
            $(ctl).addClass("disableClick");
            $(ctl).text(msg);
            return true;
        };

        $(document).ready(function () {

            $("#ptnIndexSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#ptnIndexTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#ptnIndexStatusFilter").change(function () {
                var statusFilter = $(this).val();
                // var PrevSort = document.getElementById("@(ViewBag.PrevSort)").value;
                var prevSort = document.getElementById("PrevSortId").value.toString();
                var url = '@Url.Action("Index", "PTNs")?statusFilter=' + statusFilter + '&prevSort=' + prevSort;
                window.location.href = url;
            });

            $("#waiverIndexSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#waiverIndexTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#waiverIndexStatusFilter").change(function () {
                var statusFilter = $(this).val();
                // var PrevSort = document.getElementById("@(ViewBag.PrevSort)").value;
                var prevSort = document.getElementById("WaiverPrevSortId").value.toString();
                var url = '@Url.Action("Index", "Waivers")?statusFilter=' + statusFilter + '&prevSort=' + prevSort;
                window.location.href = url;
            });
        });
    </script>

    <style>
