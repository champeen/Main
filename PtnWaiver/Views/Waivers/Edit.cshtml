@model PtnWaiver.Models.Waiver

@{
    ViewData["Title"] = "Edit";
}

<h1>Waiver</h1>
<h4>Edit</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger fw-bold" })
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="CreatedUserFullName" />
            <input type="hidden" asp-for="CreatedUserEmail" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="ModifiedUser" />
            <input type="hidden" asp-for="ModifiedUserFullName" />
            <input type="hidden" asp-for="ModifiedUserEmail" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="DeletedUser" />
            <input type="hidden" asp-for="DeletedUserFullName" />
            <input type="hidden" asp-for="DeletedUserEmail" />
            <input type="hidden" asp-for="DeletedDate" />
            <div class="form-group">
                <label asp-for="RevisionNumber" class="control-label"></label>
                <input asp-for="RevisionNumber" class="form-control" />
                <span asp-validation-for="RevisionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PorProject" class="control-label"></label>
                <input asp-for="PorProject" class="form-control" />
                <span asp-validation-for="PorProject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductProcess" class="control-label"></label>
                <input asp-for="ProductProcess" class="form-control" />
                <span asp-validation-for="ProductProcess" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateClosed" class="control-label"></label>
                <input asp-for="DateClosed" class="form-control" />
                <span asp-validation-for="DateClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectiveActionDueDate" class="control-label"></label>
                <input asp-for="CorrectiveActionDueDate" class="form-control" />
                <span asp-validation-for="CorrectiveActionDueDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="mx-2 btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
