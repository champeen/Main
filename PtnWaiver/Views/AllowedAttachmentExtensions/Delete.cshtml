@model PtnWaiver.Models.AllowedAttachmentExtensions

@{
    ViewData["Title"] = "Delete";
}

<h1>Allowed Attachment Extensions</h1>
<h3 class="mt-5">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExtensionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExtensionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="mx-2 btn btn-secondary">Cancel</a>
    </form>
</div>
