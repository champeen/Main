@model IEnumerable<PtnWaiver.Models.GroupApprovers>

@{
    ViewData["Title"] = "Index";
}

<h1>Group\Approvers Dropdown</h1>
<div class="row mt-5 mb-3">
    <div class="col-12">
        <a asp-action="Create" class="me-2 btn btn-success">Create New</a>
        <span class=""><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a></span>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryApproverFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryApproverTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryApproverEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryApproverFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryApproverTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryApproverEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryApproverFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryApproverTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryApproverEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryApproverFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryApproverTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryApproverEmail)
                </td>
                <td>
                    <span class="text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary ms-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ms-1">Delete</a>
                    </span>
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No data found</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>
