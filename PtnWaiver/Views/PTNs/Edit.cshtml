@model PtnWaiver.Models.PTN

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-4">
        <h1>PTN</h1>
    </div>
    <div class="col-8 text-end">
        <h4>
            <span class="fw-bold">
                @Html.DisplayFor(m => m.DocId)
            </span>
        </h4>
        <h4>
            @Html.DisplayNameFor(m => m.Status):
            <span class="text-success fw-bold">
                @Html.DisplayFor(m => m.Status)
            </span>
        </h4>
    </div>
</div>

<h4 class="mt-5">Edit</h4>
<hr />

<form asp-action="Edit">
    @Html.AntiForgeryToken()

    <!-- Top actions -->
    <div class="d-flex justify-content-start mt-4">
        <div class="d-flex gap-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </div>
    </div>

    <!-- Validation summary -->
    <div class="row">
        <div class="col-12">
            @Html.ValidationSummary(false, "", new { @class = "text-danger fw-bold mt-3" })
        </div>
    </div>

    <!-- Hidden fields (system/state) -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DocId" />
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="OriginatingGroup" />
    <input type="hidden" asp-for="ProductSize" />
    <input type="hidden" asp-for="OriginatorInitials" />
    <input type="hidden" asp-for="OriginatorYear" />
    <input type="hidden" asp-for="SerialNumber" />

    <input type="hidden" asp-for="RejectedBeforeSubmission" />
    <input type="hidden" asp-for="RejectedByApprover" />
    <input type="hidden" asp-for="RejectedReason" />
    <input type="hidden" asp-for="SubmittedForApprovalUser" />
    <input type="hidden" asp-for="SubmittedForApprovalUserFullName" />
    <input type="hidden" asp-for="SubmittedForApprovalDate" />
    <input type="hidden" asp-for="ApprovedByUser" />
    <input type="hidden" asp-for="ApprovedByUserFullName" />
    <input type="hidden" asp-for="ApprovedByDate" />
    <input type="hidden" asp-for="CompletedBylUser" />
    <input type="hidden" asp-for="CompletedBylUserFullName" />
    <input type="hidden" asp-for="CompletedByDate" />

    <input type="hidden" asp-for="CreatedUser" />
    <input type="hidden" asp-for="CreatedUserFullName" />
    <input type="hidden" asp-for="CreatedUserEmail" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="ModifiedUser" />
    <input type="hidden" asp-for="ModifiedUserFullName" />
    <input type="hidden" asp-for="ModifiedUserEmail" />
    <input type="hidden" asp-for="ModifiedDate" />
    <input type="hidden" asp-for="DeletedUser" />
    <input type="hidden" asp-for="DeletedUserFullName" />
    <input type="hidden" asp-for="DeletedUserEmail" />
    <input type="hidden" asp-for="DeletedDate" />

    <!-- General Information -->
    <div class="card shadow-sm rounded-3 mt-3">
        <div class="card-header bg-light border-bottom d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">General Information</h5>
            <div class="d-flex gap-2 text-nowrap">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </div>

        <div class="card-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger fw-bold mb-3" })

            <div class="row g-4">
                <!-- Left column -->
                <div class="col-md-6">
                    <!-- DocId (temporary display) -->
                    <div class="form-group mb-3">
                        <label asp-for="DocId" class="control-label fw-bold mb-1"></label>
                        <input asp-for="DocId" class="form-control" disabled />
                        <span asp-validation-for="DocId" class="text-danger fw-bold mt-1"></span>
                    </div>

                    <!-- Title -->
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label fw-bold mb-1"></label>
                        <i class="bi bi-r-circle-fill ms-1" style="color:red;" data-bs-toggle="tooltip" title="Required"></i>
                        @if (Model.Status == "Draft")
                        {
                            @Html.TextAreaFor(m => m.Title, new { @class = "form-control", @rows = 3 })
                        }
                        else
                        {
                            @Html.TextAreaFor(m => m.Title, new { @class = "form-control", @rows = 3, disabled = "disabled" })
                            <input type="hidden" asp-for="Title" />
                        }
                        <span asp-validation-for="Title" class="text-danger fw-bold"></span>
                    </div>

                    <!-- Wafering Department -->
                    <div class="form-group form-check mb-3">
                        <label class="form-check-label fw-bold mb-1">
                            @if (Model.Status == "Draft")
                            {
                                <!-- Editable: Tag Helper is fine; no extra hidden input -->
                                <input class="form-check-input" asp-for="isWaferingDepartment" />
                            }
                            else
                            {
                                <!-- Read-only: use plain checkbox + one hidden boolean -->
                                <input type="checkbox"
                                       class="form-check-input"
                                       @(Model.isWaferingDepartment ? "checked" : "")
                                       disabled />
                                <input type="hidden"
                                       name="isWaferingDepartment"
                                       value="@(Model.isWaferingDepartment.ToString().ToLower())" />
                            }
                            @Html.DisplayNameFor(m => m.isWaferingDepartment)
                        </label>
                    </div>

                    <!-- Comments -->
                    <div class="form-group mb-3">
                        <label asp-for="Comments" class="control-label fw-bold mb-1"></label>
                        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", @rows = 3 })
                        <span asp-validation-for="Comments" class="text-danger fw-bold"></span>
                    </div>
                </div>

                <!-- Right column -->
                <div class="col-md-6">
                    <!-- Subject Type -->
                    <div class="form-group mb-3">
                        <label asp-for="SubjectType" class="control-label fw-bold mb-1"></label>
                        <i class="bi bi-r-circle-fill ms-1" style="color:red;" data-bs-toggle="tooltip" title="Required"></i>
                        <i class="bi bi-info-circle-fill ms-1" style="color:blue;" data-bs-toggle="tooltip"
                           title="Hold Ctrl (⌘ on Mac) to select multiple; hold again to deselect."></i>

                        @if (Model.Status == "Draft")
                        {
                            <select asp-for="SubjectType" id="PtnsEditSubjectTypes" multiple="multiple" style="width:100%;">
                                @foreach (SelectListItem item in ViewBag.SubjectTypes)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                        }
                        else
                        {
                            <select asp-for="SubjectType" id="PtnsEditSubjectTypes2" multiple="multiple" style="width:100%;" disabled>
                                @foreach (SelectListItem item in ViewBag.SubjectTypes)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            @for (int i = 0; i < Model.SubjectType.Count; i++)
                            {
                                @Html.HiddenFor(m => m.SubjectType[i])
                            }
                        }
                        <span asp-validation-for="SubjectType" class="text-danger fw-bold"></span>
                    </div>

                    <!-- Group Approver -->
                    <div class="form-group mb-3">
                        <label asp-for="GroupApprover" class="control-label fw-bold mb-1"></label>
                        <i class="bi bi-r-circle-fill ms-1" style="color:red;" data-bs-toggle="tooltip" title="Required"></i>
                        <i class="bi bi-info-circle-fill ms-1" style="color:blue;" data-bs-toggle="tooltip"
                           title="Select your direct supervisor and/or the manager of the department impacted by the waiver."></i>

                        @if (Model.Status == "Draft")
                        {
                            <select asp-for="GroupApprover" id="PtnsEditGroupApprovers" multiple="multiple" style="width:100%;">
                                @foreach (SelectListItem item in ViewBag.Groups)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                        }
                        else
                        {
                            <select asp-for="GroupApprover" id="PtnsEditGroupApprovers2" multiple="multiple" style="width:100%;" disabled>
                                @foreach (SelectListItem item in ViewBag.Groups)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                            @for (int i = 0; i < Model.GroupApprover.Count; i++)
                            {
                                @Html.HiddenFor(m => m.GroupApprover[i])
                            }
                        }
                        <span asp-validation-for="GroupApprover" class="text-danger fw-bold"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /General Information -->

    <!-- Bottom actions -->
    <div class="d-flex justify-content-start mt-4">
        <div class="d-flex gap-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        // Select2 initializations
        $('#PtnsEditSubjectTypes').select2({
            placeholder: "Select Subject Type(s)"
        });
        $('#PtnsEditSubjectTypes2').select2({
            placeholder: "Select Subject Type(s)"
        });
        $('#PtnsEditGroupApprovers').select2({
            placeholder: "Select Department Approver"
        });
        $('#PtnsEditGroupApprovers2').select2({
            placeholder: "Select Department Approver"
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
