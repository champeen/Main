                <form asp-action="RejectPtn" asp-route-id="@Model.PTN.Id" asp-route-rejectedReason="@Model.PTN.RejectedReason">
                    <input type="hidden" asp-for="@Model.PTN.Id" />
                    <div class="row mt-5">
                        <div class="col-12">
                            @Html.ActionLink("Submit for Admin Approval","SubmitPtnForAdminApproval","PTNs", new {id=Model.PTN.Id}, new {@class="btn btn-success"})
                            <input type="submit" value="RejectPTN" class="btn btn-danger ms-1" />
