@model PtnWaiver.Models.PTN

@{
    ViewData["Title"] = "Create";
}

<h1>PTN</h1>
<h4>Create</h4>
<hr />

<form asp-action="Create" asp-route-source="@ViewBag.Source">
    <div class="row my-4">
        <div class="col-md-12">
            <div class="text-nowrap">
                <span class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </span>
                <span class="mx-2">
                    @if (ViewBag.Source == "Home")
                    {
                        @Html.ActionLink("Cancel","Index","Home",new {},new {@class="btn btn-secondary"})
                    }
                    else
                    {
                        @Html.ActionLink("Cancel","Index",new {},new {@class="btn btn-secondary"})
                    }
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="CreatedUserFullName" />
            <input type="hidden" asp-for="CreatedUserEmail" />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger fw-bold" })
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group my-3">
                <label asp-for="DocId" class="control-label fw-bold mb-1"></label>
                <input asp-for="DocId" class="form-control" style="max-width:25%;" />
                <span asp-validation-for="DocId" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Title" class="control-label fw-bold mb-1"></label>
                <input asp-for="Title" class="form-control" style="max-width:50%;" />
                <span asp-validation-for="Title" class="text-danger fw-bold"></span>
            </div>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-12">
            <div class="text-nowrap">
                <span class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </span>
                <span class="mx-2">
                    @if (ViewBag.Source == "Home")
                    {
                        @Html.ActionLink("Cancel","Index","Home",new {},new {@class="btn btn-secondary"})
                    }
                    else
                    {
                        @Html.ActionLink("Cancel","Index",new {},new {@class="btn btn-secondary"})
                    }
                </span>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
