@model IEnumerable<PtnWaiver.Models.PTN>

@{
    ViewData["Title"] = "Index";
}

<h1>PTNs</h1>

<form asp-controller="PTNs" asp-action="Index">
    <div class="row mt-5 mb-3">
        <div class="col-12">
            <input hidden value=@ViewBag.PrevSort id="PrevSortId" />
            <input hidden value=@ViewBag.PrevStatusFilter id="PrevStatusFilterId" />
            <div class="row">
                <div class="col-6 text-start">
                    @*<a asp-action="Create">Create New</a>*@
                    @*            @Html.ActionLink("Create New","Create")*@
                    <span class="flex-nowrap">
                        @Html.ActionLink("Create New","Create",new {source="PtnIndex"},new {@class="btn btn-success"})
                    </span>
                </div>
                <div class="col-3 text-center">
                    @* <i class="bi bi-binoculars-fill" data-bs-toggle="tooltip" data-bs-html="true"></i> *@
                    <input class="form-control" id="ptnIndexSearch" type="text" placeholder="Search..">
                </div>
                <div class="col-1 fw-bold text-end mt-2">
                    Status:
                </div>
                <div class="col-2 text-start">
                    @Html.DropDownList("statusFilter", new SelectList(ViewBag.StatusList,"Value","Text"), new {@class = "form-control form-select", @id="ptnIndexStatusFilter"})
                </div>
            </div>

        </div>
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead class="align-top align-text-top table-primary">
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.DocId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtnPin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupApprover)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtrNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Created User
            </th>
            <th>
                Created Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="ptnIndexTable">
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-nowrap">
                    @Html.DisplayFor(modelItem => item.DocId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PtnPin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupApprover)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PtrNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedUserFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td class="text-nowrap">
                    @* @Html.ActionLink("Edit","Edit",new {id=@item.Id, tab="Details"},new {@class="btn btn-primary"}) *@
                    @Html.ActionLink("Details","Details",new {id=@item.Id, tab="Details"},new {@class="btn btn-secondary"})
                    @if (ViewBag.IsAdmin == true || ViewBag.Username == item.CreatedUser)
                    {
                        @if (item.DeletedDate == null && item.Status == "Draft")   // COMMENT OUT THIS LINE IN ORDER TO DELETE CHANGE REQUESTS
                        {
                            @Html.ActionLink("Delete","Delete",new {id=@item.Id, tab="Details"},new {@class="btn btn-danger ms-1", title="Hard Delete only if in 'Draft' status.", onclick="return DisplayProgressMessage(this, 'Saving...');"})
                            @*<i class="bi bi-info-circle" data-bs-toggle="tooltip" data-bs-html="true" title="Hard Delete only if in 'Draft' status. Otherwise you must change status to 'Cancelled'"></i>*@
                        }
                        @if (item.Waivers.Any(m => m.Status == "Draft" || m.Status == "Pending Approval")) {}
                        else
                        {
                            @if (item.Status == "Approved")
                            {
                                @Html.ActionLink("Close PTN","ClosePtn",new {id=@item.Id},new {@class="btn btn-primary ms-1", onclick="return DisplayProgressMessage(this, 'Saving...');", @title="Can only close a PTN when there are no 'Draft' or 'Pending Approval' Waivers under it"})
                        }
                            
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No data found</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>
