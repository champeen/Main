@model EHS.ViewModels.ChemicalRiskAssessmentViewModel

@{
    ViewData["Title"] = "Attachments";
}

@{
    var hazardLookup = ViewData["HazardLookup"] as IReadOnlyDictionary<int, string>
                       ?? new Dictionary<int, string>();

    var hazardRisk = ViewData["HazardRisk"] as IReadOnlyDictionary<int, int>
                     ?? new Dictionary<int, int>();

    // compositionCounts: assessmentId -> number of components
    var compositionCounts = ViewBag.CompositionCounts as IReadOnlyDictionary<int, int>
                            ?? new Dictionary<int, int>();

    // Used for tooltip text if you want it
    string JoinHazards(IEnumerable<int> ids)
        => ids == null
            ? ""
            : string.Join(", ",
                ids.Select(id =>
                    hazardLookup.TryGetValue(id, out var text)
                        ? text
                        : $"#{id}"
                ));

    int GetMaxRisk(IEnumerable<int> ids)
    {
        if (ids == null)
            return 0;

        return ids
            .Where(id => hazardRisk.ContainsKey(id))
            .Select(id => hazardRisk[id])
            .DefaultIfEmpty(0)
            .Max();
    }

    string GetHazardBoxClass(int maxRisk)
        => maxRisk switch
        {
            1 => "hazard-box level-1",
            2 => "hazard-box level-2",
            3 => "hazard-box level-3",
            4 => "hazard-box level-4",
            _ => "hazard-box level-0"
        };

    // bool anyMissingComponents = Model.chemical_risk_assessment.Any(m =>
    //     !compositionCounts.ContainsKey(m.id) || compositionCounts[m.id] == 0);
}

<style>
    .hazard-box {
        width: 30px;
        height: 30px;
        border-radius: 6px;
        margin: 0 auto;
        border: 1px solid rgba(255,255,255,0.3);
    }

        .hazard-box.level-0 {
            background-color: transparent;
            border-style: dashed;
            opacity: 0.4;
        }

        .hazard-box.level-1 {
            background-color: #28a745;
        }
        /* green  */
        .hazard-box.level-2 {
            background-color: #ffc107;
        }
        /* yellow */
        .hazard-box.level-3 {
            background-color: #fd7e14;
        }
        /* orange */
        .hazard-box.level-4 {
            background-color: #dc3545;
        }
    /* red    */
</style>

<div class="py-4">
    <div class="card shadow rounded-4">
        <div class="card-body">

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <h2 class="card-title mb-0">Chemical Risk Assessment</h2>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>

            @* <p>
    <a class="btn btn-success btn-sm" asp-action="Create" title="Create">
        <img src="@Url.Content("~/css/icons/lucide/create.svg")" alt="Delete" width="24" height="24" />
    </a>
</p> *@

            <div class="table-wrapper">
                <div class="table-container datatable-hidden">
                    @* <div class="table-container table-responsive"> *@
                    <table id="craTable" class="table table-striped table-hover table-bordered nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.chemical)</th>
                                <th>Components</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.location)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.area)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.use)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.state)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.nfpa)</th>

                                @* Hazards *@
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.skin_absorption)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.skin_contact)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.eye_contact)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.respiratory)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.ingestion)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.sensitizer)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.carcinogen)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.reproductive)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.other)</th>

                                @* PPE *@
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.ppe_glove)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.ppe_suit)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.ppe_eyewear)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_risk_assessment.ppe_respiratory)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var compCount = compositionCounts.TryGetValue(Model.chemical_risk_assessment.id, out var count) ? count : 0;
                                bool hasComponents = compCount > 0;
                            }

                            <tr>
                                <td>@Html.DisplayFor(modelItem => Model.chemical_risk_assessment.chemical)</td>
                                <td>
                                    @if (!hasComponents)
                                    {
                                        <span class="badge bg-danger"
                                              title="No chemical composition records defined for this assessment. Add Chemicals/Components in 'Details' view">
                                            Missing
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"
                                              title="Number of chemical components for this assessment.">
                                            @compCount @(" component" + (compCount == 1 ? "" : "s"))
                                        </span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(Model => Model.chemical_risk_assessment.location)</td>
                                <td>@string.Join(", ", Model.chemical_risk_assessment.area ?? new List<string>())</td>
                                <td>@string.Join(", ", Model.chemical_risk_assessment.use ?? new List<string>())</td>
                                <td>@Html.DisplayFor(Model => Model.chemical_risk_assessment.state)</td>


                                <td>@Html.DisplayFor(Model => Model.chemical_risk_assessment.nfpa)</td>

                                @* Hazards as colored boxes *@
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.skin_absorption))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.skin_absorption)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.skin_contact))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.skin_contact)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.eye_contact))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.eye_contact)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.respiratory))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.respiratory)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.ingestion))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.ingestion)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.sensitizer))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.sensitizer)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.carcinogen))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.carcinogen)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.reproductive))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.reproductive)"></div>
                                </td>
                                <td>
                                    <div class="@GetHazardBoxClass(GetMaxRisk(Model.chemical_risk_assessment.other))"
                                         title="@JoinHazards(Model.chemical_risk_assessment.other)"></div>
                                </td>

                                @* PPE *@
                                <td>@string.Join(", ", Model.chemical_risk_assessment.ppe_glove ?? new List<string>())</td>
                                <td>@string.Join(", ", Model.chemical_risk_assessment.ppe_suit ?? new List<string>())</td>
                                <td>@string.Join(", ", Model.chemical_risk_assessment.ppe_eyewear ?? new List<string>())</td>
                                <td>@string.Join(", ", Model.chemical_risk_assessment.ppe_respiratory ?? new List<string>())</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <h4 class="my-3">Attachments</h4>
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("SaveAttachment", "chemical_risk_assessment", new { id = Model.chemical_risk_assessment.id, sourceView = "Attachments" }, FormMethod.Post, false, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row align-items-end mb-3">
                            <div class="col-md-9">
                                <label class="form-label fw-bold">Upload Attachment(s)</label>
                                <input type="file" name="fileAttachment" class="form-control" @ViewBag.DisableAttachmentUpload />
                            </div>
                            <div class="col-md-3">
                                <input type="submit" value="Upload" class="btn btn-success w-100" @ViewBag.DisableAttachmentUpload />
                            </div>
                        </div>
                        @* File Attachment Error Message *@
                        @if (!string.IsNullOrEmpty(Model.FileAttachmentError))
                        {
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
                                        @Model.FileAttachmentError
                                        <button type="button"
                                                class="btn-close"
                                                data-bs-dismiss="alert"
                                                aria-label="Close"></button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>File Name</th>
                                    <th>Date Added</th>
                                    <th>Size</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.attachments.Any())
                                {
                                    foreach (var item in Model.attachments)
                                    {
                                        string size = item.Size < 1000 ? item.Size + " bytes" : string.Format("{0:N0} KB", item.Size / 1000);
                                        string createdDateFormatted = Model.chemical_risk_assessment.created_date.ToString();
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@createdDateFormatted</td>
                                            <td>@size</td>
                                            <td>
                                                @Html.ActionLink("Download", "DownloadAttachment", "chemical_risk_assessment", new { id = Model.chemical_risk_assessment.id, fileName = item.Name, sourcePath = item.FullPath }, new { @class = "btn btn-sm btn-secondary me-1" })
                                                @if (Model.IsAdmin || Model.Username == Model.chemical_risk_assessment.created_user)
                                                {
                                                    @Html.ActionLink("Delete", "DeleteAttachment", "chemical_risk_assessment", new { id = Model.chemical_risk_assessment.id, fileName = item.Name, sourcePath = item.FullPath }, new { @class = "btn btn-sm btn-danger" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No attachments found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

