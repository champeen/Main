@model EHS.Models.Dropdowns.agent

@{
    ViewData["Title"] = "Edit Agent";
}

<div class="container-fluid py-4">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <h2 class="card-title text-primary mb-4">Edit Agent</h2>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <input type="hidden" asp-for="created_user" />
                <input type="hidden" asp-for="created_user_fullname" />
                <input type="hidden" asp-for="created_user_email" />
                <input type="hidden" asp-for="created_date" />

                <div class="mb-3">
                    <label asp-for="exposure_type" class="form-label"></label>
                    @Html.DropDownListFor(model => model.exposure_type, new SelectList(ViewBag.ExposureTypes, "Value", "Text"), "-- Select Exposure Type --", new { @class = "form-select select2-single", @id = "AgentEditExposureType" })
                    <span asp-validation-for="exposure_type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="description" class="form-label"></label>
                    <input asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="sort_order" class="form-label"></label>
                    <input asp-for="sort_order" class="form-control" />
                    <span asp-validation-for="sort_order" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="display" />
                    <label class="form-check-label" asp-for="display"></label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#AgentEditExposureType').select2({
                placeholder: "Select Exposure Type...",
                allowClear: true,
                width: '100%'
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
