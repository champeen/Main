@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<table id="segTable2" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Hidden ID</th>
            <th>Name</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        <tr><td>1</td><td>Michael</td><td>Admin</td></tr>
        <tr><td>2</td><td>Sarah</td><td>User</td></tr>
    </tbody>
</table>

@section Scripts {
<script>
    $(document).ready(function () {
        $('#segTable2').DataTable({
            scrollX: true,
            pageLength: 10,
            lengthChange: true,
            responsive: false,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copy',
                    exportOptions: { columns: ':visible' }
                },
                {
                    extend: 'csv',
                    exportOptions: { columns: ':visible' }
                },
                {
                    extend: 'excel',
                    exportOptions: { columns: ':visible' }
                },
                {
                    extend: 'pdf',
                    exportOptions: { columns: ':visible' }
                },
                {
                    extend: 'print',
                    exportOptions: { columns: ':visible' }
                }
            ],
            columnDefs: [
                { targets: [0], visible: false }
            ]
        });
    });
</script>
}
