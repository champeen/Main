@{
    ViewData["Title"] = "User Not Found";
}

<div class="container-fluid py-5 text-center">
    <h1 class="text-danger">User Not Found</h1>
    <p class="lead">We couldn’t find an account for <strong>@ViewBag.Username</strong>.</p>
    <p>This might be a permissions issue or you may not be set up yet.</p>

    <div class="mt-4">
        <a href="https://sksiltroncss.freshservice.com/support/home" class="btn btn-primary me-2" target="_blank">Create a Ticket</a>
        <a href="mailto:it.errors@sksiltron.com" class="btn btn-outline-secondary">Email Support</a>
    </div>
</div>