@model IEnumerable<EHS.Models.chemical_composition>

@{
    ViewData["Title"] = "Chemical Composition";
}

<div class="container-fluid py-4">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="card-title">Chemical Composition</h2>
                <div>
                    <a asp-action="Create" class="btn btn-sm btn-success">Create New</a>
                    @* Optional back button if there's a parent page:
                    <a asp-controller="ih_chemical" asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">Back</a>
                    *@
                </div>
            </div>

            <div class="table-wrapper">
                <div class="table-container">
                    <table id="compositionTable" class="table table-striped table-hover table-bordered nowrap datatable-hidden" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.assessment)</th>
                                <th>@Html.DisplayNameFor(model => model.cas_number)</th>
                                <th>@Html.DisplayNameFor(model => model.chemical_name)</th>
                                <th>@Html.DisplayNameFor(model => model.concentration_low)</th>
                                <th>@Html.DisplayNameFor(model => model.concentration_high)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.assessment.chemical)</td>
                                    <td>@Html.DisplayFor(modelItem => item.cas_number)</td>
                                    <td>@Html.DisplayFor(modelItem => item.chemical_name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.concentration_low)</td>
                                    <td>@Html.DisplayFor(modelItem => item.concentration_high)</td>
                                    <td class="text-nowrap">
                                        <div class="d-flex gap-1 flex-nowrap align-items-center">
                                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-primary flex-shrink-0">Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-outline-info flex-shrink-0">Details</a>
                                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger flex-shrink-0">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#compositionTable').DataTable({
                scrollX: true,
                autoWidth: false,
                pageLength: 10,
                lengthChange: true,
                responsive: false,
                order: [],
                dom: "<'table-controls d-flex justify-content-between align-items-center'Bf>" +
                     "t" +
                     "<'d-flex justify-content-between align-items-center mt-2'ip>",
                buttons: [
                    { extend: 'copy', exportOptions: { columns: ':visible:not(:last-child)' } },
                    { extend: 'csv', exportOptions: { columns: ':visible:not(:last-child)' } },
                    { extend: 'excel', exportOptions: { columns: ':visible:not(:last-child)' } },
                    { extend: 'pdf', exportOptions: { columns: ':visible:not(:last-child)' } },
                    { extend: 'print', exportOptions: { columns: ':visible:not(:last-child)' } }
                ],
                columnDefs: [
                    { targets: [5], orderable: false, className: 'no-sort' } // Actions column
                ],
                fixedColumns: {
                    leftColumns: 1
                }
            });

            $('#compositionTable').removeClass('datatable-hidden');
        });
    </script>
}
