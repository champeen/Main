@model EHS.Models.chemical_composition

@{
    ViewData["Title"] = "Delete Chemical Component";
}

<div class="container-fluid py-4">
    <div class="card shadow rounded-4">
        <div class="card-body">

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <h2 class="card-title mb-0">Confirm Deletion</h2>
                <a asp-action="Details" asp-controller="chemical_risk_assessment" asp-route-id="@Model.chemical_risk_assessment_id" class="btn btn-outline-secondary">Cancel</a>
            </div>

            <p class="mb-3">Are you sure you want to delete this chemical component?</p>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tbody>
@*                         <tr>
                            <th>@Html.DisplayNameFor(m => m.assessment)</th>
                            <td>@Html.DisplayFor(m => m.assessment.chemical)</td>
                        </tr> *@
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.cas_number)</th>
                            <td>@Html.DisplayFor(m => m.cas_number)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.chemical_name)</th>
                            <td>@Html.DisplayFor(m => m.chemical_name)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.concentration_low)</th>
                            <td>@Html.DisplayFor(m => m.concentration_low)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.concentration_high)</th>
                            <td>@Html.DisplayFor(m => m.concentration_high)</td>
                        </tr>

                        <tr><th>@Html.DisplayNameFor(m => m.created_user)</th><td>@Html.DisplayFor(m => m.created_user)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.created_user_fullname)</th><td>@Html.DisplayFor(m => m.created_user_fullname)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.created_user_email)</th><td>@Html.DisplayFor(m => m.created_user_email)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.created_date)</th><td>@Html.DisplayFor(m => m.created_date)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.modified_user)</th><td>@Html.DisplayFor(m => m.modified_user)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.modified_user_fullname)</th><td>@Html.DisplayFor(m => m.modified_user_fullname)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.modified_user_email)</th><td>@Html.DisplayFor(m => m.modified_user_email)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.modified_date)</th><td>@Html.DisplayFor(m => m.modified_date)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.deleted_user)</th><td>@Html.DisplayFor(m => m.deleted_user)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.deleted_user_fullname)</th><td>@Html.DisplayFor(m => m.deleted_user_fullname)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.deleted_user_email)</th><td>@Html.DisplayFor(m => m.deleted_user_email)</td></tr>
                        <tr><th>@Html.DisplayNameFor(m => m.deleted_date)</th><td>@Html.DisplayFor(m => m.deleted_date)</td></tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="id" />
                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Details" asp-controller="chemical_risk_assessment" asp-route-id="@Model.chemical_risk_assessment_id" class="btn btn-outline-secondary">Cancel</a>
                    <input type="submit" value="Delete" class="btn btn-danger px-4" />
                </div>
            </form>
        </div>
    </div>
</div>
