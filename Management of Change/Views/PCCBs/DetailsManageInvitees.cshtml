                <label asp-for="PCCB.NotificationList" class="control-label fw-bold mb-1"></label>
                @Html.TextBoxFor(model => model.PCCB.NotificationList, new { @class = "form-control form-select", @readonly = true })
                <span asp-validation-for="PCCB.NotificationList" class="text-danger fw-bold mt-1"></span>
            </div>
