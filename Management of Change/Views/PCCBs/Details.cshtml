<div class="mt-5">
    <span style="font-size: 1.7rem;  font-weight:600; line-height:1.2;">Invitees</span>
    @Html.ActionLink("Back", "Details", "ChangeRequests", new { id = @Model?.PCCB.ChangeRequestId, tab = "PccbReview" }, new { @class = "btn btn-secondary ms-2 mb-2" })
</div>
<div class="ms-5">
    <table class="table table-striped table-bordered mt-2">
        <thead class="table-primary">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Title
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PCCB.Invitees)
            {
                var color = "";
                if (item.Status == "Invited")
                {
                    color = "text-secondary fw-bold";
                }
                else if (item.Status == "Declined")
                {
                    color = "text-primary fw-bold";
                }
                else if (item.Status == "Attended")
                {
                    color = "text-success fw-bold";
                }
                else if (item.Status == "No Show")
                {
                    color = "text-danger fw-bold";
                }
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="@color">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </tbody>
        @if (Model.PCCB.Invitees == null || Model.PCCB.Invitees.Count() == 0)
        {
            <tr>
                <td class="text-nowrap">No data found</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
    </table>
</div>

