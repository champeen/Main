<div class="mt-5">
    <span style="font-size: 1.7rem;  font-weight:600; line-height:1.2;">Invitees</span>
    @if (ViewBag.IsAdmin)
    {
        <span>@Html.ActionLink("Add New", "Create", "PccbInvitees", new { pccbId = @Model?.PCCB.Id, tab = "Details" }, new { @class = "btn btn-success align-middle ms-2 mb-2" })</span>
    }
    @Html.ActionLink("Back", "Details", "ChangeRequests", new { id = @Model?.PCCB.ChangeRequestId, tab = "PccbReview" }, new { @class = "btn btn-secondary ms-2 mb-2" })
</div>
<div class="ms-5">


    <table class="table table-striped table-bordered mt-2">
        <thead class="table-primary">
            <tr>
                @if (ViewBag.IsAdmin)
                {
                    <th></th>
                }
                <th>
                    Name
                </th>
                <th>
                    Title
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
                @if (ViewBag.IsAdmin)
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PCCB.Invitees)
            {
                var color = "";
                if (item.Status == "Invited")
                {
                    color = "text-secondary fw-bold";
                }
                else if (item.Status == "Declined")
                {
                    color = "text-primary fw-bold";
                }
                else if (item.Status == "Attended")
                {
                    color = "text-success fw-bold";
                }
                else if (item.Status == "No Show")
                {
                    color = "text-danger fw-bold";
                }
                <tr>
                    @if (ViewBag.IsAdmin)
                    {
                        <td>

                            <a asp-action="delete" asp-controller="PccbInvitees" asp-route-id="@item.Id">
                                <i class="bi bi-file-minus-fill" style="color:red;" data-bs-toggle="tooltip" data-bs-html="true" title="Remove Invitee"></i>
                            </a>

                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="@color">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    @if (ViewBag.IsAdmin)
                    {
                        <td>
                            @if (item.Status != "Invited")
                            {
                                <a asp-action="Invited" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-secondary btn- btn-sm me-1">Invited</a>
                            }
                            else
                            {
                                <a asp-action="Invited" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-secondary btn-sm me-1 disabled">Invited</a>
                            }
                            @if (item.Status != "Attended")
                            {
                                <a asp-action="Attended" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-success btn-sm me-1">Attended</a>
                            }
                            else
                            {
                                <a asp-action="Attended" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-success btn-sm me-1 disabled">Attended</a>
                            }
                            @if (item.Status != "Declined")
                            {
                                <a asp-action="Declined" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-primary btn-sm me-1">Declined</a>
                            }
                            else
                            {
                                <a asp-action="Declined" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-primary btn-sm me-1 disabled">Declined</a>
                            }
                            @if (item.Status != "No Show")
                            {
                                <a asp-action="NoShow" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-danger btn-sm me-1">No Show</a>
                            }
                            else
                            {
                                <a asp-action="NoShow" asp-controller="PCCBs" asp-route-inviteeId="@item.Id" class="btn btn-danger btn-sm me-1 disabled">No Show</a>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
        @if (Model.PCCB.Invitees == null || Model.PCCB.Invitees.Count() == 0)
        {
            <tr>
                <td class="text-nowrap">No data found</td>
                @if (ViewBag.IsAdmin)
                {
                    <td></td>
                    <td></td>
                }
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
    </table>
</div>
