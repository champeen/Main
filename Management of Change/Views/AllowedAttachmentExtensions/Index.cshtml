@model IEnumerable<Management_of_Change.Models.AllowedAttachmentExtensions>

@{
    ViewData["Title"] = "Index";
}

<h1>Allowed Attachment Extensions</h1>

<p>
    <a asp-action="Create">Create New</a>
    <span class="mx-5"><a asp-controller="Admin" asp-action="Index">Previous</a></span>
</p>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExtensionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExtensionName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
