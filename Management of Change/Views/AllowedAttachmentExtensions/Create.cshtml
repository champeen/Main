@model Management_of_Change.Models.AllowedAttachmentExtensions

@{
    ViewData["Title"] = "Create";
}

<h1>Allowed Attachment Extensions</h1>

<h4 class="mt-5">Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="ExtensionName" class="control-label fw-bold"></label>
                <input asp-for="ExtensionName" class="form-control" />
                <span asp-validation-for="ExtensionName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="mx-1 btn btn-secondary" asp-action="Index">Cancel</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
