@model Management_of_Change.Models.Administrators

@{
    ViewData["Title"] = "Create";
}

<h1>Administrators</h1>

<h4 class="mt-5">Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <div class="form-group my-3">
                <label asp-for="Username" class="control-label fw-bold my-1"></label>
                @Html.DropDownListFor(model => model.Username, new SelectList(ViewBag.Employees,"Value","Text"), "-- Select User --", new { @class="form-control form-select"})
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label fw-bold my-1">
                    <input class="form-check-input" asp-for="Approver" /> @Html.DisplayNameFor(model => model.Approver)
                </label>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="mx-1 btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
