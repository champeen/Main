@model Management_of_Change.Models.GeneralMocResponses

@{
    ViewData["Title"] = "Edit";
}

<h1>General MOC Respsonses</h1>

<h4>Edit</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Question" />
            <input type="hidden" asp-for="ChangeRequestId" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="ModifiedUser" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="DeletedUser" />
            <input type="hidden" asp-for="DeletedDate" />
            <div class="form-group my-3">
                <label asp-for="Question" class="control-label fw-bold"></label>
                @Html.DisplayFor(model => model.Question)
            </div>
            <div class="form-group my-3">
                <label asp-for="Response" class="control-label fw-bold"></label>
                @*<input asp-for="Response" class="form-control" />*@
                @Html.DropDownListFor(model => model.Response, new SelectList(ViewBag.Responses), new { @class="form-control form-select"})
                <span asp-validation-for="Response" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Order" class="control-label fw-bold"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-12">
            <div class="text-nowrap">
                <span class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </span>
                <span class="mx-2">
                    <a asp-controller="ChangeRequests" asp-action="Details" asp-route-id="@Model?.ChangeRequestId">Cancel</a>
                </span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
