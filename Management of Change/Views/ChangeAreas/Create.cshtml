@model Management_of_Change.Models.ChangeArea

@{
    ViewData["Title"] = "Create";
}

<h1>Change Area</h1>

<h4 class="mt-5">Create</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="ChangeGradePrimaryApproverUsername" class="control-label fw-bold mb-1"></label>
                @* <input asp-for="PrimaryApproverUsername" class="form-control" /> *@
                @Html.DropDownListFor(model => model.ChangeGradePrimaryApproverUsername, new SelectList(ViewBag.Users,"Value","Text"), "-- select --", new { @class="form-control form-select", @style="max-width:25%;"})
                <span asp-validation-for="ChangeGradePrimaryApproverUsername" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="ChangeGradeSecondaryApproverUsername" class="control-label fw-bold mb-1"></label>
                @* <input asp-for="SecondaryApproverUsername" class="form-control" /> *@
                @Html.DropDownListFor(model => model.ChangeGradeSecondaryApproverUsername, new SelectList(ViewBag.Users,"Value","Text"), "-- select --", new { @class="form-control form-select", @style="max-width:25%;"})
                <span asp-validation-for="ChangeGradeSecondaryApproverUsername" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Order" class="control-label fw-bold"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="mx-1 btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
