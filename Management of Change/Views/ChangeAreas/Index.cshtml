@model IEnumerable<Management_of_Change.Models.ChangeArea>

@{
    ViewData["Title"] = "Index";
}

<h1>Change Areas</h1>

<div class="row mt-5 mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-success">Create New</a>
        <span class="mx-1"><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Previous</a></span>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryApproverFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryApproverTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryApproverEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryApproverFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryApproverTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryApproverEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryApproverFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryApproverTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryApproverEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryApproverFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryApproverTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryApproverEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No data found</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>

