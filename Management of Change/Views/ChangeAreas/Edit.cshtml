@model Management_of_Change.Models.ChangeArea

@{
    ViewData["Title"] = "Edit";
}

<h1>Change Area</h1>

<h4 class="mt-5">Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="ModifiedUser" />
            <input type="hidden" asp-for="DeletedDate" />
            <input type="hidden" asp-for="DeletedUser" />
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="PrimaryApproverUsername" class="control-label fw-bold mb-1"></label>
                @* <input asp-for="PrimaryApproverUsername" class="form-control" /> *@
                @Html.DropDownListFor(model => model.PrimaryApproverUsername, new SelectList(ViewBag.Users,"Value","Text"), "-- select --", new { @class="form-control form-select", @style="max-width:50%;"})
                <span asp-validation-for="PrimaryApproverUsername" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="SecondaryApproverUsername" class="control-label fw-bold mb-1"></label>
                @* <input asp-for="SecondaryApproverUsername" class="form-control" /> *@
                @Html.DropDownListFor(model => model.SecondaryApproverUsername, new SelectList(ViewBag.Users,"Value","Text"), "-- select --", new { @class="form-control form-select", @style="max-width:50%;"})
                <span asp-validation-for="SecondaryApproverUsername" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Order" class="control-label fw-bold"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="mx-2 btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
