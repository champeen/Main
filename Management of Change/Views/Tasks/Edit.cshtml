@model Management_of_Change.Models.Task

@{
    ViewData["Title"] = "Edit";
}

<h1>Task</h1>
<h4>Edit</h4>
<hr />
<form asp-action="Edit">
    <div class="row my-4">
        <div class="col-12">
            <div class="text-nowrap">
                <span class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </span>
                <span class="mx-2">
                    @Html.ActionLink("Cancel","Index", new {}, new {@class="btn btn-secondary"})
                </span>
                <span class="float-end">
                    @Html.ActionLink("Send Assignment Reminder","TaskReminder", new {id = Model.Id}, new {@class="btn btn-success"})
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger fw-bold" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImpactAssessmentResponseAnswerId" />
            @*<input type="hidden" asp-for="ChangeRequestId" />*@
            <input type="hidden" asp-for="AssignedByUser" />
            <input type="hidden" asp-for="MocNumber" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="ModifiedUser" />
            <input type="hidden" asp-for="DeletedDate" />
            <input type="hidden" asp-for="DeletedUser" />
            <div class="form-group my-3">
                <label asp-for="ChangeRequestId" class="control-label fw-bold"></label>
                @*<label asp-for="MocNumber" class="control-label fw-bold"></label>*@
                @*<input asp-for="MocNumber" class="form-control" />*@
                @Html.DropDownListFor(model => model.ChangeRequestId, new SelectList(ViewBag.ChangeRequests,"Value","Text"), new { @class="form-control form-select"})
                <span asp-validation-for="ChangeRequestId" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="ImplementationType" class="control-label fw-bold"></label>
                @Html.DropDownListFor(model => model.ImplementationType,
                new List<SelectListItem>{
                new SelectListItem {Value="Pre", Text="Pre"},
                new SelectListItem {Value="Post", Text="Post"}},
                "--Select One--",
                new { @class="form-control form-select", @style="max-width:25%"})
                <span asp-validation-for="ImplementationType" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Status" class="control-label fw-bold"></label>
                @*<input asp-for="Status" class="form-control" />*@
                @Html.DropDownListFor(model => model.Status,
                new List<SelectListItem>{
                new SelectListItem {Value="Open", Text="Open"},
                new SelectListItem {Value="In-Progress", Text="In-Progress"},
                new SelectListItem {Value="On Hold", Text="On Hold"},
                new SelectListItem {Value="Complete", Text="Complete"},
                new SelectListItem {Value="Cancelled", Text="Cancelled"}},
                "--Select One--",
                new { @class="form-control form-select", @style="max-width:25%"})
                <span asp-validation-for="Status" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="AssignedToUser" class="control-label fw-bold"></label>
                @Html.DropDownListFor(model => model.AssignedToUser, new SelectList(ViewBag.Users,"Value","Text"), new { @class="form-control form-select", @style="max-width:25%;"})
                <span asp-validation-for="AssignedToUser" class="text-danger fw-bold"></span>
            </div>
@*            <div class="form-group my-3">
                <label asp-for="AssignedByUser" class="control-label fw-bold"></label>
                <input asp-for="AssignedByUser" class="form-control" style="max-width:25%"/>
                <span asp-validation-for="AssignedByUser" class="text-danger"></span>
            </div>*@
            <div class="form-group my-3">
                <label asp-for="Title" class="control-label fw-bold"></label>
                <input asp-for="Title" class="form-control" style="max-width:50%;"/>
                <span asp-validation-for="Title" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label fw-bold"></label>
                @*<input asp-for="Description" class="form-control" />*@
                @Html.TextAreaFor(model => model.Description, new {@class = "form-control", @rows = 3 })
                <span asp-validation-for="Description" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="DueDate" class="control-label fw-bold"></label>
                <input asp-for="DueDate" class="form-control" style="max-width:10%"/>
                <span asp-validation-for="DueDate" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="CompletionDate" class="control-label fw-bold"></label>
                <input asp-for="CompletionDate" class="form-control" style="max-width:10%"/>
                <span asp-validation-for="CompletionDate" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="CompletionNotes" class="control-label fw-bold"></label>
                @*<input asp-for="CompletionNotes" class="form-control" />*@
                @Html.TextAreaFor(model => model.CompletionNotes, new {@class = "form-control", @rows = 3 })
                <span asp-validation-for="CompletionNotes" class="text-danger fw-bold"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="OnHoldReason" class="control-label fw-bold"></label>
                <input asp-for="OnHoldReason" class="form-control" />
                <span asp-validation-for="OnHoldReason" class="text-danger fw-bold"></span>
            </div>
@*            <div class="form-group my-3">
                <label asp-for="ImpactAssessmentResponseAnswerId" class="control-label fw-bold"></label>
                <select asp-for="ImpactAssessmentResponseAnswerId" class="form-control" asp-items="ViewBag.ImpactAssessmentResponseAnswerId"></select>
                <span asp-validation-for="ImpactAssessmentResponseAnswerId" class="text-danger"></span>
            </div>*@
        </div>
    </div>
    <hr />
    <div class="row my-4">
        <div class="col-12">
            <div class="text-nowrap">
                <span class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </span>
                <span class="mx-2">
                    @Html.ActionLink("Cancel","Index", new {}, new {@class="btn btn-secondary"})
                </span>
                <span class="float-end">
                    @Html.ActionLink("Send Assignment Reminder","TaskReminder", new {id = Model.Id}, new {@class="btn btn-success"})
                </span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
