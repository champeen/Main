@model Management_of_Change.Models.AdditionalImpactAssessmentReviewers

@{
    ViewData["Title"] = "Edit";
}
<h1>Additional Impact Assessment Reviewer</h1>
<h4 class="mt-5">Edit</h4>
<hr />
<div class="row my-4">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-changeRequestId="@Model.ChangeRequestId" asp-route-tab="@ViewBag.Tab">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ChangeRequestId" />
            <input type="hidden" asp-for="ReviewerName" />
            <input type="hidden" asp-for="ReviewerEmail" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="ModifiedUser" />
            <input type="hidden" asp-for="DeletedUser" />
            <input type="hidden" asp-for="DeletedDate" />
            <div class="form-group my-3">
                <span class="control-label fw-bold mb-1">Reviewer</span>
                @Html.DropDownListFor(model => model.Reviewer, new SelectList(ViewBag.Users,"Value","Text"), "-- select --", new { @class="form-control form-select"})
                <span asp-validation-for="Reviewer" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="ReviewType" class="control-label fw-bold mb-1"></label>
                @*<input asp-for="ReviewType" class="form-control" />*@
                @Html.DropDownListFor(model => model.ReviewType, new SelectList(ViewBag.ReviewTypes), new { @class="form-control form-select"})
                <span asp-validation-for="ReviewType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back to List","Index", new {changeRequestId=Model.ChangeRequestId,tab=ViewBag.Tab}, new {@class="btn btn-secondary ms-2"})
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
