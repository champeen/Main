<div class="text-nowrap">
    <h4 class="mt-5">Impact Assessment Response Answers</h4>
    <div class="mt-4">
        @Html.ActionLink("Back to Change Request","Details", "ChangeRequests", new {id=@Model.ImpactAssessmentResponse?.ChangeRequestId, tab="ImpactAssessments"}, new {@class="btn btn-secondary"})
    </div>
</div>
<table class="table table-bordered table-striped mt-3">
    <thead class="table-primary">
        <tr class="table-primary">
            @*<th>
            Impact Assessment Response Id
            </th>
            <th>
            Impact Assessment Response Answer Id
            </th>*@
            <th>
                Review Type
            </th>
            <th>
                Question
            </th>
            @*<th>
            Order
            </th>*@
            <th>
                Action
            </th>
            <th>
                Title/Short Description
            </th>
            @*<th>
            Details Of ActionNeeded
            </th>*@
            <th>
                Pre Or Post Implementation
            </th>
            <th>
                Action Owner
            </th>
            <th>
                Date Due
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var item in Model.ImpactAssessmentResponse.ImpactAssessmentResponseAnswers)
        {
            i = i + 1;
            string recId = "record" + i.ToString();
            <tr id="@recId">
                @*<td>
            @Html.DisplayFor(modelItem => item.ImpactAssessmentResponseId)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Id)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewType)
                </td>
                <td>
                    @* @Html.DisplayFor(modelItem => item.Question) *@
                    @Html.Raw(item.Question)
                    @* <a href="~/Documents/MoC-New Equipment Checklist.xlsx" target="_blank" >click me homey</a> *@
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Order)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.DetailsOfActionNeeded)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.PreOrPostImplementation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionOwner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDue)
                </td>
                <td class="text-nowrap">
                    @if ((ViewBag.IsAdmin == true || ViewBag.Username == Model.ImpactAssessmentResponse.Username) && Model.ChangeRequest.Change_Status == "ImpactAssessmentReview" && Model.ImpactAssessmentResponse.ReviewCompleted == false)
                    {
                        @Html.ActionLink("Edit","Edit", "ImpactAssessmentResponseAnswers", new {id=@item.Id, tab=""}, new {@class="btn btn-primary"})
                        @Html.ActionLink("No Action Needed","MarkNoAction", "ImpactAssessmentResponses", new {id=@item.Id, tab="", rec=recId}, new {@class="btn btn-primary ms-2"})
                    }
                    else
                    {
                        @Html.ActionLink("Details","Details", "ImpactAssessmentResponseAnswers", new {id=@item.Id, tab=""}, new {@class="btn btn-secondary"})
                    }                    
                    @if (item.Task != null)
                    {
                        @Html.ActionLink("Task","Details", "Tasks", new {id=@item.Task.Id, tab=""}, new {@class="btn btn-secondary ms-2"})
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Back to Change Request","Details", "ChangeRequests", new {id=@Model.ImpactAssessmentResponse?.ChangeRequestId, tab="ImpactAssessments"}, new {@class="btn btn-secondary"})
<script>
    $(document).ready(function () {
        var anchor = document.getElementById('@Model.IARrecord');
        anchor.scrollIntoView(true);
    });
</script>