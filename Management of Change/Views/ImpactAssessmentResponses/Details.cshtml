@{
    ViewData["Title"] = "Details";
}

<h1>Impact Assessment Response</h1>

<div>
    <div class="accordion mt-5" id="accordionExample" >
        <div class="" >
            <h2 class="accordion-header" id="headingOne" >
                <button class="accordion-button" @*style="max-width:20%;"*@ type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
