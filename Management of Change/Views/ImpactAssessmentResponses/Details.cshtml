                        </dd>
                        <dt class="col-sm-2 my-2 text-end">
                            @Html.DisplayNameFor(model => model.ImpactAssessmentResponse.CreatedUser)
                        </dt>
                        <dd class="col-sm-4 my-2">
                            @Html.DisplayFor(model => model.ImpactAssessmentResponse.CreatedUser)
                        </dd>
                        <dt class="col-sm-2 my-2 text-end">
                            @Html.DisplayNameFor(model => model.ImpactAssessmentResponse.ChangeType)
                        </dt>
                        <dd class="col-sm-4 my-2">
                            @Html.DisplayFor(model => model.ImpactAssessmentResponse.ChangeType)
                        </dd>
                        <dt class="col-sm-2 my-2 text-end">
                            @Html.DisplayNameFor(model => model.ImpactAssessmentResponse.CreatedDate)
                        </dt>
                        <dd class="col-sm-4 my-2">
                            @Html.DisplayFor(model => model.ImpactAssessmentResponse.CreatedDate)
                        </dd>
                        <dt class="col-sm-2 my-2 text-end">
                            @Html.DisplayNameFor(model => model.ImpactAssessmentResponse.Reviewer)
                        </dt>
                        <dd class="col-sm-4 my-2">
                            @Html.DisplayFor(model => model.ImpactAssessmentResponse.Reviewer)
                        </dd>
                        <dt class="col-sm-2 my-2 text-end">
                            @Html.DisplayNameFor(model => model.ImpactAssessmentResponse.ModifiedUser)
