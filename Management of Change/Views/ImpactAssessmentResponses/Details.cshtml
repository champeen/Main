                </div>
                <div class="text-nowrap my-3">
                    @if ((ViewBag.IsAdmin == true || ViewBag.Username == Model.ImpactAssessmentResponse.Username) && Model.ChangeRequest.Change_Status == "ImpactAssessmentReview" && Model.ImpactAssessmentResponse.ReviewCompleted == false)
                    {
                        @Html.ActionLink("Edit","Edit",new {id=@Model.ImpactAssessmentResponse?.Id, tab="IARDetails"},new {@class="btn btn-primary"})
                    }
                    @Html.ActionLink("Back to Change Request","Details", "ChangeRequests", new {id=@Model.ImpactAssessmentResponse?.ChangeRequestId, tab="ImpactAssessments"}, new {@class="btn btn-secondary"})

