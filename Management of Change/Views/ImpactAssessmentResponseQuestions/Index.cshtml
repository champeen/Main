@model IEnumerable<Management_of_Change.Models.ImpactAssessmentResponseQuestions>

@{
    ViewData["Title"] = "Index";
}

<h1>Impact Assessment Response Questions</h1>

<div class="row mt-5 mb-3">
    <div class="col-8">
        <a asp-action="Create" class="btn btn-success">Create New</a>
        <span class="mx-2"><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a></span>
    </div>
    <div class="col-4">
        @* <i class="bi bi-binoculars-fill" data-bs-toggle="tooltip" data-bs-html="true"></i> *@
        <input class="form-control" id="changeTypeSearchIARQ" type="text" placeholder="Search..">
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.CreatedUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedDate)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody id="ImpactAssessmentResponseQuestionsTable">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewType)
            </td>
            <td>
                @Html.Raw(item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.CreatedUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedDate)
            </td>*@
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No data found</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>
