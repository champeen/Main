@model IEnumerable<Management_of_Change.Models.ImpactAssessmentMatrix>

@{
    ViewData["Title"] = "Index";
}

<h1>Impact Assessment Matrix</h1>

<form asp-controller="ImpactAssessmentMatrices" asp-action="Index">
    <div class="row mt-5 mb-3">
        <div class="col-2">
            <a asp-action="Create" class="btn btn-success">Create New</a>
            <span class="mx-1"><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a></span>
        </div>
        <div class="col-3">
            @* <i class="bi bi-binoculars-fill" data-bs-toggle="tooltip" data-bs-html="true"></i> *@
            <input class="form-control" id="searchIAM" type="text" placeholder="Search..">
        </div>
        <div class="col-1 text-end fw-bold mt-2">
            Change Type
        </div>
        <div class="col-2 text-end">
            @Html.DropDownList("changeTypeFilter", new SelectList(ViewBag.ChangeTypes),"All", new {@class = "form-control form-select", @id="changeTypeFilter2"})
        </div>
        <div class="col-1 text-end fw-bold mt-2">
            Review Type
        </div>
        <div class="col-2 text-end">
            @Html.DropDownList("reviewTypeFilter", new SelectList(ViewBag.ReviewTypes),"All", new {@class = "form-control form-select", @id="reviewTypeFilter2"})
        </div>
        <div class="col-1 text-start">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChangeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="impactAssessmentMatrixTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangeType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewerName)
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No data found</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }
</table>
