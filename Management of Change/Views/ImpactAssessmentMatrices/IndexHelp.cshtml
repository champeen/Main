@model IEnumerable<Management_of_Change.Models.ImpactAssessmentMatrix>

@{
    ViewData["Title"] = "Index";
}

<h1>Impact Assessment Matrix</h1>

<form asp-controller="ImpactAssessmentMatrices" asp-action="IndexHelp">
    <div class="row mt-5 mb-3">
        <div class="col-2">
            <a asp-controller="Help" asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
        <div class="col-3">
            @* <i class="bi bi-binoculars-fill" data-bs-toggle="tooltip" data-bs-html="true"></i> *@
            <input class="form-control" id="searchIAMHelp" type="text" placeholder="Search..">
        </div>
        <div class="col-1 text-end fw-bold mt-2">
            Change Type
        </div>
        <div class="col-2 text-end">
            @Html.DropDownList("changeTypeFilter", new SelectList(ViewBag.ChangeTypes),"All", new {@class = "form-control form-select", @id="changeTypeFilter3"})
        </div>
        <div class="col-1 text-end fw-bold mt-2">
            Review Type
        </div>
        <div class="col-2 text-end">
            @Html.DropDownList("reviewTypeFilter", new SelectList(ViewBag.ReviewTypes),"All", new {@class = "form-control form-select", @id="reviewTypeFilter3"})
        </div>
        <div class="col-1 text-start">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
        
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChangeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerName)
            </th>
            @* <th></th> *@
        </tr>
    </thead>
    <tbody id="impactAssessmentMatrixHelpTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangeType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewerName)
                </td>
                @*                 <td class="text-nowrap">
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td> *@
            </tr>
        }
    </tbody>
</table>
