@model Management_of_Change.Models.EmailLists

@{
    ViewData["Title"] = "Edit";
}

<h1>Email List</h1>

<h4 class="mt-5">Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUser" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="ModifiedUser" />
            <input type="hidden" asp-for="DeletedDate" />
            <input type="hidden" asp-for="DeletedUser" />
            <div class="form-group my-3">
                <label asp-for="ListName" class="control-label fw-bold mb-1"></label>
                <input asp-for="ListName" class="form-control" />
                <span asp-validation-for="ListName" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Emails" class="control-label fw-bold mb-1"></label>
@*                 @Html.DropDownListFor(model => model.Emails, new MultiSelectList(ViewBag.Employees, "Value", "Text", Model.Emails), "-- select --", new { @class = "form-control form-select", multiple = true, @id = "EmailListEdit" }) *@
                <select asp-for="@Model.Emails" id="EmailListEditEmails" multiple="multiple" style="width:100%;">
                    @foreach (SelectListItem item in ViewBag.Employees)
                    {
                        <option value=@item.Value selected="@item.Selected">@item.Text </option>
                    }
                </select>
                @* <input asp-for="Emails" class="form-control" /> *@
                <span asp-validation-for="Emails" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Order" class="control-label fw-bold mb-1"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="mx-1 btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#EmailListEditEmails').select2({
            placeholder: "Select Employee(s)"
        });
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
