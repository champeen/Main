<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Management of Change</title>
    <link rel="icon" href="~/Butterfly.ico" sizes="16x16 32x32" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*    <link rel="stylesheet" href="~/Management_of_Change.styles.css" asp-append-version="true" />*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#changeRequestSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#changeRequestTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#statusFilter").change(function () {
                var value = $(this).val().toLowerCase();
                $("#changeRequestTable tr").filter(function () {
                    $(this).toggle($(this.children[2]).text().toLowerCase().indexOf(value) > -1)
                });
            });
            ///////////////////////////////////////////////////////////////////////////////////////////////////////////
            // $("#reviewTypeFilter").change(function () {
            //     var value = $(this).val().toLowerCase();
            //     $("#reviewTypeTable tr").filter(function () {
            //         $(this).toggle($(this.children[0]).text().toLowerCase() === value)
            //     });
            // });
            ///////////////////////////////////////////////////////////////////////////////////////////////////////////
            $("#taskSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#taskTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#taskStatusFilter").change(function () {
                var value = $(this).val().toLowerCase();
                $("#taskTable tr").filter(function () {
                    $(this).toggle($(this.children[4]).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#searchIAM").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#impactAssessmentMatrixTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#searchIAMHelp").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#impactAssessmentMatrixHelpTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#changeTypeSearchIFAM").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#FinalApprovalMatrixTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#changeTypeSearchIARQ").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#ImpactAssessmentResponseQuestionsTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        });
    </script>
    <style>
        .nav-link.active {
            background-color: #3a6bfb !important;
            color: white !important;
        }

        .nav-link.disabled {
            pointer-events: auto;
        }

        @@media (min-width: 1800px) {
            .container-xxl, .container-xl, .container-lg, .container-md, .container-sm, .container {
                max-width: 1740px;
            }
        }

        input#session-date {
            display: inline-block;
            position: relative;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbar-dark bg-primary text-white" @*style="z-index:1;"*@>
            <div class="container-fluid">
                <div>
                    <img src="~/HappyWings_PNG.png" class="img-fluid" width="48" height="48">
                </div>
                <div class="me-3 text-center">
                    <a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                        <span style="font-size: 1.5em;">Management of Change</span>
                        @*<br />Dashboard*@
                    </a>
                </div>
                @*<a class="navbar-brand" asp-area="" asp-controller="ChangeRequests" asp-action="Index">Management of Change</a>*@
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Management of Change</a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mx-3">
                            <a class="nav-link text-light" asp-controller="ChangeRequests" asp-action="Index">
                                @* <i class="bi bi-book"></i> *@
                                Change Requests
                            </a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-white" asp-controller="Tasks" asp-action="Index">
                                @* <i class="bi bi-list-task" ></i> *@
                                Tasks
                            </a>
                        </li>
                        <li class="nav-item mx-3 ms-lg-auto">
                            <a class="nav-link text-light" href="~/MoC Process Flow.png" target="_blank">
                                <i class="bi bi-diagram-2-fill" data-bs-toggle="tooltip" data-bs-html="true">
                                </i>
                                MoC Process Flow
                            </a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-light" asp-controller="Help" asp-action="Index" target="_blank">
                                <i class="bi bi-question-circle-fill" data-bs-toggle="tooltip" data-bs-html="true">
                                </i>
                                Help
                            </a>
                        </li>
                        @if (ViewBag.IsAdmin == true)
                        {
                            <li class="nav-item mx-3">
                                <a class="nav-link text-light" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-person-fill-add" data-bs-toggle="tooltip" data-bs-html="true">
                                    </i>
                                    Admin
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3" style="margin-top: 100px;">
            <div class="row">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-center text-primary">
        <div class="container-fluid fixed-bottom bg-white">
            &copy; 2023 - SK Siltron CSS - Management of Change @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*    <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
