@using System.Linq
@using System.Text.Json
@inject Management_of_Change.Data.Management_of_ChangeContext _context

@{
    var admins = _context.Administrators
        .Where(a => a.Approver)
        .Join(
            _context.__mst_employee,
            a => a.Username,
            e => e.onpremisessamaccountname!,
            (a, e) => new { Name = e.displayname, Email = e.mail }
        )
        .ToList();
    var adminJson = JsonSerializer.Serialize(admins);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Management of Change</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Let popover tables expand */
        .popover {
            max-width: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-primary mb-3">
            <div class="container-fluid">
                <a class="nav-link text-light me-4" asp-controller="Home" asp-action="Index">
                    <img src="~/HappyWings_PNG.png" width="48" height="48" class="d-inline-block align-text-top" />
                    <span class="ms-2 fs-5">MoC Dashboard</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-3">
                            <a class="nav-link text-light" asp-controller="ChangeRequests" asp-action="Index">Change Requests</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-light" asp-controller="Tasks" asp-action="Index">Tasks</a>
                        </li>

                        @if (ViewBag.IsAdmin == true)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-light" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-person-fill-add"></i> Admin
                                </a>
                            </li>
                        }

                        <li class="nav-item me-3">
                            <a href="javascript:void(0)"
                               id="adminInfoBtn"
                               class="nav-link text-light">
                                <i class="bi bi-people-fill"></i> Display Admins
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="margin-top:100px">
        @RenderBody()
    </div>

    <footer class="footer fixed-bottom bg-white border-top text-center py-2">
        &copy; 2023 SK Siltron CSS – Management of Change
    </footer>

    <!-- Bootstrap bundle (Popper + JS) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Popover init via pure JS -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
          // 1) Grab the JSON you serialized server-side
          var adminData = @Html.Raw(adminJson);
          console.log('adminData:', adminData);

          // 2) Find the trigger element
          var triggerEl = document.getElementById('adminInfoBtn');
          if (!triggerEl) {
            console.error("Element #adminInfoBtn not found");
            return;
          }

          // 3) Initialize the popover, with HTML allowed and sanitization off
          new bootstrap.Popover(triggerEl, {
            trigger: 'hover focus',
            html: true,
            sanitize: false,
            container: 'body',
            title: 'Administrator Contacts',
            content: function() {
              // Build table rows
              var rows = adminData.map(function(a) {
                return '<tr><td>' + (a.Name  || '') + '</td>'
                     +    '<td>' + (a.Email || '') + '</td></tr>';
              }).join('');
              return '<table class="table table-sm mb-0">'
                   +   '<thead><tr><th>Name</th><th>Email</th></tr></thead>'
                   +   '<tbody>' + rows + '</tbody>'
                   + '</table>';
            }
          });
        });
    </script>
</body>
</html>
