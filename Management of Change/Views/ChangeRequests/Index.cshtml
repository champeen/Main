@{
    ViewData["Title"] = "Index";
}

<h1>Change Requests</h1>

<form asp-controller="ChangeRequests" asp-action="Index">
    <div class="row mt-3">
        <div class="col-6 text-start">
            @*<a asp-action="Create">Create New</a>*@
            @*            @Html.ActionLink("Create New","Create")*@
            <span class="flex-nowrap">
                @Html.ActionLink("Create New","Create",new {source="ChangeRequestIndex"},new {@class="btn btn-primary"})
            </span>
        </div>
        <div class="col-3 text-center">
            @* <i class="bi bi-binoculars-fill" data-bs-toggle="tooltip" data-bs-html="true"></i> *@
            <input class="form-control" id="changeRequestSearch" type="text" placeholder="Search..">
        </div>
        <div class="col-1 fw-bold text-end mt-2">
            Status:
        </div>
        <div class="col-2 text-start">
            @Html.DropDownList("statusFilter", new SelectList(ViewBag.StatusList,"Value","Text"),"All", new {@class = "form-control form-select", @id="statusFilter"})
        </div>
        @*        <div class="col-2 fw-bold text-end">
        Another Filter:
        </div>
        <div class="col-1 text-start">
        @Html.DropDownList("timestampFilter2", new SelectList(ViewBag.ActiveRecordList2), new {@class = "form-control" })
        </div>*@
