                Estimated Completion Date
                @*@Html.DisplayNameFor(model => model.Request_Date)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="changeRequestTable">
        @foreach (var item in Model)
        {
            <tr id="changeRequestStatus">
                <td class="text-nowrap">
                    @Html.DisplayFor(modelItem => item.MOC_Number)
                </td>
                <td>
                    @if (item.Priority == "High")
                    {
                        <i class="bi bi-exclamation-circle-fill" style="color:red;" data-bs-toggle="tooltip" data-bs- html="true" title="High Priority"></i>
                    }
                    @Html.DisplayFor(modelItem => item.Title_Change_Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Change_Status_Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Change_Owner_FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Change_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Change_Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location_Site)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area_of_Change)
                </td>
                @*                <td>
            @Html.DisplayFor(modelItem => item.Scope_of_the_Change)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Justification_of_the_Change)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Proudct_Line)
                </td>
                @*                <td>
            @Html.DisplayFor(modelItem => item.Estimated_Completion_Date)
            </td>*@
                @*                <td>
            @Html.DisplayFor(modelItem => item.Raw_Material_Component_Numbers_Impacted)
            </td>*@
                @*                <td>
            @Html.DisplayFor(modelItem => item.Expiration_Date_Temporary)
            </td>*@
                @if (DateTime.Now > item.Estimated_Completion_Date && item.Cancel_Date == null && item.Closeout_Date == null)
                {
                    <td class="fw-bolder text-danger">
                        @Html.DisplayFor(modelItem => item.Estimated_Completion_Date)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Estimated_Completion_Date)
                    </td>
                }
                <td class="text-nowrap">
                    @*                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-tab="Details" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>*@
                    @*                    @if ((ViewBag.IsAdmin == true || ViewBag.Username == item.Change_Owner) && (item.Change_Status == "Draft"))
                {
                @Html.ActionLink("Edit","Edit",new {id=@item.Id, tab="Index"},new {@class="btn btn-primary"})
                }*@
                    @Html.ActionLink("Details","Details",new {id=@item.Id, tab="Details"},new {@class="btn btn-secondary"})
                    @if (ViewBag.IsAdmin == true || ViewBag.Username == item.Change_Owner)
                    {
                        @if (item.DeletedDate == null && item.Change_Status == "Draft")   // COMMENT OUT THIS LINE IN ORDER TO DELETE CHANGE REQUESTS
                        {
                            @Html.ActionLink("Delete","Delete",new {id=@item.Id},new {@class="btn btn-danger ms-2", title="Hard Delete only if in 'Draft' status. Otherwise you must change status to 'Cancelled'"})
                            @*<i class="bi bi-info-circle" data-bs-toggle="tooltip" data-bs-html="true" title="Hard Delete only if in 'Draft' status. Otherwise you must change status to 'Cancelled'"></i>*@
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

