@model IEnumerable<Management_of_Change.Models.ReviewType>

@{
    ViewData["Title"] = "Index";
}

<h1>Review Types</h1>

<div class="row mt-5 mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-success">Create New</a>
        <span class="mx-2"><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a></span>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Change Area
                <i class="bi bi-info-circle ms-1" style="color: darkorange;" data-bs-toggle="tooltip" data-bs-html="true" title="If Change Area is not blank, the Reviewer will only be added to the review if the Change Area of the Change Request matches">
                </i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviewer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangeArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reviewer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
